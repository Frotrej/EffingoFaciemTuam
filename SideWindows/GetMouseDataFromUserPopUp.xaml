<Window x:Class="EffingoFaciemTuam.SideWindows.GetKeyboardDataFromUserPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EffingoFaciemTuam.SideWindows"
        mc:Ignorable="d"
        Title="GetKeyboardDataFromUserPopUp" 
        SizeToContent="WidthAndHeight"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextBlockXcoord" Grid.Column="0" Grid.Row="0" Text="X:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        <TextBlock x:Name="TextBlockYcoord" Grid.Column="0" Grid.Row="1" Text="Y:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        <Button x:Name="BtnStartTrackMouse" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Content="Start" Click="Button_Click_CreateFillAndAddSequenceElement" Margin="5"/>
    </Grid>

</Window>
