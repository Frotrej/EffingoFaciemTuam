<Window x:Class="EffingoFaciemTuam.SideWindows.GetMouseDataFromUserPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EffingoFaciemTuam.SideWindows"
        mc:Ignorable="d"
        Title="GetKeyboardDataFromUserPopUp" 
        Height="200" Width="250"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0"  VerticalAlignment="Center" Margin="15,0,15,0" BorderBrush="Black" BorderThickness="1">
            <TextBlock x:Name="TextBlockXcoord"  Text="X:" />
        </Border>
        <Border Grid.Column="0" Grid.Row="1"  VerticalAlignment="Center" Margin="15,0,15,0" BorderBrush="Black" BorderThickness="1">
            <TextBlock x:Name="TextBlockYcoord"  Text="Y:" />
        </Border>
        
        <Button x:Name="BtnStartTrackMouse" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Content="Start" Click="Button_Click_FillMouseSequenceElement" Margin="5"/>
    </Grid>

</Window>
