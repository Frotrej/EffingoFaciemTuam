<Window x:Class="EffingoFaciemTuam.SideWindows.AddElementWindowsSequence.GetKbdDataFromUserPupUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EffingoFaciemTuam.SideWindows.AddElementWindowsSequence"
        mc:Ignorable="d"
        Title="GetKbdDataFromUserPupUp" Height="200" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <Border  Grid.ColumnSpan="4" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Margin="10">
            <TextBlock Text="{Binding = KeyboardKeysString}"/>
        </Border>
        
        <Button Grid.Column="0" Grid.Row="1" Content="Start" Click="Button_Click_FillKbdSequenceElement"/>
        <Button Grid.Column="1" Grid.Row="1" Content=":)"/>
        <Button Grid.Column="2" Grid.Row="1" Content="Zamknij" Click="Button_Click_CloseWindow"/>
        <Button Grid.Column="3" Grid.Row="1" Content="Zapisz" Click="Button_Click_Stop"/>

    </Grid>
</Window>
