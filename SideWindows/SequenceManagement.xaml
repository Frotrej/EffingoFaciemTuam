<Window x:Class="EffingoFaciemTuam.Windows.SequenceManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EffingoFaciemTuam.Windows"
        xmlns:models="clr-namespace:EffingoFaciemTuam.Model"
        mc:Ignorable="d"
        Title="SequenceManagement" Height="450" Width="498">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.82*"/>
            <RowDefinition Height="0.08*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>


        <DataGrid x:Name="SequenceRepresentation" Grid.Row="0" HorizontalAlignment="Center" Width="340" ItemsSource="{Binding Sequence.Sequence}" AutoGenerateColumns="False" CanUserSortColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" AlternatingRowBackground="LightGray">
            <!--dodac filtrowanie automatyczne po kolumnie "numer korku"-->

            <DataGrid.Columns>
                <DataGridTextColumn Header="NumerKroku" Binding="{Binding StepNumber}"/>
                <DataGridTemplateColumn Header="Typ">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Type}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{x:Static models:SequenceElement.StepTypes}" SelectedItem="{Binding Type, Mode=TwoWay}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Klawiatura" Binding="{Binding KeyboardKey}"/>
                <DataGridTextColumn Header="MyszX" Binding="{Binding MouseX}"/>
                <DataGridTextColumn Header="MyszY" Binding="{Binding MouseY}"/>
            </DataGrid.Columns>
        </DataGrid>


        <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="380,0,0,0" Grid.Row="1" Width="20" Height="20" Click="Button_Click_AddElement"/>
        <Button Content="-" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="425,0,0,0" Grid.Row="1" Width="20" Height="20" Click="Button_Click_RemoveElement"/>

        <Button Content="Zamknij" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="2" Padding="5,5,5,5" Margin="240,0,0,0" Click="CloseWindow"/>
        <Button Content="Zapisz" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="2" Padding="5,5,5,5" Margin="310,0,0,0"/>
        <Button Content="Testuj sekwencje" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Margin="80,0,0,0" Click="Button_Click_TestSequence"/>
    </Grid>
</Window>
