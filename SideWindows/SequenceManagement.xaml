<Window x:Class="EffingoFaciemTuam.Windows.SequenceManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EffingoFaciemTuam.Windows"
        mc:Ignorable="d"
        Title="SequenceManagement" Height="450" Width="498">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.82*"/>
            <RowDefinition Height="0.08*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <ListView Name="SequenceRepresentation" Grid.Row="0" HorizontalAlignment="Center"  Width="340" ItemsSource="{Binding Elements}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Akcja" DisplayMemberBinding="{Binding Typ}" Width="100"/>
                    <GridViewColumn Header="Klawiatura" DisplayMemberBinding="{Binding KeyboardKey}" Width="70" />
                    <GridViewColumn Header="MyszX" DisplayMemberBinding="{Binding MouseX}" Width="50"/>
                    <GridViewColumn Header="MyszY" DisplayMemberBinding="{Binding MouseY}" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="380,0,0,0" Grid.Row="1" Width="20" Height="20" Click="Button_Click_AddElement"/>
        <Button Content="-" Name="ButtonRemoveElement" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="425,0,0,0" Grid.Row="1" Width="20" Height="20" Click="Button_Click_RemoveElement"/>

        <Button Content="Zamknij" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="2" Padding="5,5,5,5" Margin="240,0,0,0" Click="CloseWindow"/>
        <Button Content="Zapisz" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="2" Padding="5,5,5,5" Margin="310,0,0,0"/>
        

    </Grid>
</Window>
