<Window x:Class="EffingoFaciemTuam.Windows.SequenceManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EffingoFaciemTuam.Windows"
        xmlns:models="clr-namespace:EffingoFaciemTuam.Model"
        mc:Ignorable="d"
        Title="SequenceManagement" Height="450" Width="498">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.80*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>


        <DataGrid x:Name="SequenceRepresentation" Grid.Row="0" HorizontalAlignment="Center" MinWidth="380" ItemsSource="{Binding Sequence, Source={x:Static models:SequenceStore.Sequence}}" AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" AlternatingRowBackground="LightGray">
            <!--dodac filtrowanie automatyczne po kolumnie "numer korku"-->

            <DataGrid.Columns>
                <DataGridTextColumn Header="Krok" Binding="{Binding StepNumber}"/>
                <DataGridTextColumn Header="Opóźnienie" Binding="{Binding Delay}"/>
                <DataGridTextColumn Header="Akcja" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Skrót" Binding="{Binding KeyboardKeysString}"/>
                <DataGridTextColumn Header="MyszX" Binding="{Binding MouseX}"/>
                <DataGridTextColumn Header="MyszY" Binding="{Binding MouseY}"/>
            </DataGrid.Columns>
        </DataGrid>


        <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="350,0,0,0" Grid.Row="1" Width="40" Height="40" Click="Button_Click_AddElement"/>
        <Button Content="-" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="400,0,0,0" Grid.Row="1" Width="40" Height="40" Click="Button_Click_RemoveElement"/>
        <Button Content="Testuj sekwencje" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="59,0,0,0" Grid.Row="1" Width="100" Height="40" Click="Button_Click_TestSequence"/>


        <Button Content="Zamknij" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="2" Padding="5,5,5,5" Margin="240,0,0,0" Click="CloseWindow"/>
        <Button Content="Zapisz" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="2" Padding="5,5,5,5" Margin="310,0,0,0"/>
    </Grid>
</Window>
