<Window x:Class="EffingoFaciemTuam.Windows.SequenceManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EffingoFaciemTuam.Windows"
        mc:Ignorable="d"
        Title="SequenceManagement" Height="450" Width="498">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.82*"/>
            <RowDefinition Height="0.08*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>


        <DataGrid Grid.Row="0" HorizontalAlignment="Center" Width="340" ItemsSource="{Binding Elements}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Klawiatura" Binding="{Binding KeyboardKey}" Width="70"></DataGridTextColumn>
                <DataGridTextColumn Header="MyszX" Binding="{Binding MouseX}" Width="50"></DataGridTextColumn>
                <DataGridTextColumn Header="MyszY" Binding="{Binding MouseY}" Width="50"></DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>


        <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="380,0,0,0" Grid.Row="1" Width="20" Height="20" Click="Button_Click_AddElement"/>
        <Button Content="-" Name="ButtonRemoveElement" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="425,0,0,0" Grid.Row="1" Width="20" Height="20" Click="Button_Click_RemoveElement"/>

        <Button Content="Zamknij" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="2" Padding="5,5,5,5" Margin="240,0,0,0" Click="CloseWindow"/>
        <Button Content="Zapisz" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="2" Padding="5,5,5,5" Margin="310,0,0,0"/>
        

    </Grid> 
</Window>
